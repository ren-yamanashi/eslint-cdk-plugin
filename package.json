{
  "name": "eslint-cdk-plugin",
  "version": "3.0.3",
  "description": "eslint plugin for AWS CDK projects",
  "main": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "type": "module",
  "exports": {
    "types": "./dist/index.d.ts",
    "require": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.cjs"
    },
    "import": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.mjs"
    }
  },
  "scripts": {
    "build": "sh scripts/build.sh",
    "test": "vitest --run",
    "lint": "eslint --fix --config eslint.config.js",
    "check": "tsc --noEmit",
    "pack": "pnpm run build && npm pack",
    "release:minor": "standard-version --release-as minor",
    "release:major": "standard-version --release-as major",
    "release:patch": "standard-version --release-as patch",
    "docs:dev": "cd ./docs && pnpm install && pnpm run dev",
    "docs:build": "cd ./docs && pnpm install && pnpm run build",
    "docs:preview": "cd ./docs && pnpm install && pnpm run preview"
  },
  "devDependencies": {
    "@eslint/js": "^9.26.0",
    "@types/node": "^22.15.0",
    "@typescript-eslint/rule-tester": "^8.32.1",
    "eslint": "9.22.0",
    "eslint-plugin-import": "^2.31.0",
    "pkgroll": "^2.12.2",
    "standard-version": "^9.5.0",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.32.1",
    "vitepress-plugin-llms": "^1.1.4",
    "vitest": "^3.1.3"
  },
  "dependencies": {
    "@typescript-eslint/parser": "^8.32.1",
    "@typescript-eslint/utils": "^8.32.1"
  },
  "volta": {
    "node": "22.15.0",
    "pnpm": "10.10.0"
  },
  "files": [
    "dist",
    "src",
    "!src/__tests__",
    "README.md",
    "LICENSE"
  ],
  "keywords": [
    "eslint",
    "eslintplugin",
    "eslint-plugin",
    "aws",
    "cdk"
  ],
  "homepage": "https://eslint-cdk-plugin.dev/",
  "repository": {
    "type": "git",
    "url": "https://github.com/ren-yamanashi/eslint-cdk-plugin.git"
  },
  "author": {
    "name": "ren-yamanashi"
  },
  "publishConfig": {
    "access": "public"
  },
  "license": "MIT"
}
