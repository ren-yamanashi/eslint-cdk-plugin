{
  "name": "eslint-cdk-plugin",
  "version": "2.2.0",
  "description": "eslint plugin for AWS CDK projects",
  "type": "module",
  "packageManager": "pnpm@10.10.0",
  "engines": {
    "node": ">=22",
    "pnpm": ">=10"
  },
  "main": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    "types": "./dist/index.d.ts",
    "require": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.cjs"
    },
    "import": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.mjs"
    }
  },
  "scripts": {
    "build": "tsdown",
    "test": "vitest --run",
    "lint": "eslint --fix --config eslint.config.js",
    "fmt": "prettier --write .",
    "fmt:check": "prettier --check .",
    "check": "tsc --noEmit",
    "pack": "pnpm run build && npm pack",
    "release:minor": "standard-version --release-as minor",
    "release:major": "standard-version --release-as major",
    "release:patch": "standard-version --release-as patch",
    "docs": "pnpm run --filter=@eslint-cdk-plugin/docs"
  },
  "devDependencies": {
    "@eslint/js": "^9.22.0",
    "@types/node": "^22.13.10",
    "@typescript-eslint/rule-tester": "^8.26.0",
    "eslint": "9.22.0",
    "eslint-plugin-import": "^2.31.0",
    "prettier": "4.0.0-alpha.12",
    "standard-version": "^9.5.0",
    "tsdown": "^0.11.1",
    "typescript": "^5.8.2",
    "typescript-eslint": "^8.26.0",
    "vitest": "^3.0.8"
  },
  "dependencies": {
    "@typescript-eslint/parser": "^8.26.0",
    "@typescript-eslint/utils": "^8.26.0"
  },
  "files": [
    "dist",
    "src",
    "!src/__tests__",
    "README.md",
    "LICENSE"
  ],
  "keywords": [
    "eslint",
    "eslintplugin",
    "eslint-plugin",
    "aws",
    "cdk"
  ],
  "homepage": "https://eslint-cdk-plugin.dev/",
  "repository": {
    "type": "git",
    "url": "https://github.com/ren-yamanashi/eslint-cdk-plugin.git"
  },
  "author": {
    "name": "ren-yamanashi"
  },
  "publishConfig": {
    "access": "public"
  },
  "license": "MIT"
}
